@{
}

<h1>Delete Event</h1>

<form method="post">
    @foreach (var codingEvent in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <input 
                    type="checkbox" 
                    name="eventIds" 
                    value="@codingEvent.Id"
                >
                <span>@codingEvent.Name</span>
            </label>
        </div>
    }
    
    <input type="submit" value="Delete Selected Events" class="btn btn-danger">
</form>